<Window x:Class="Yinyinpedia.repotingBuyer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yinyinpedia"
        mc:Ignorable="d"
        Title="repotingBuyer" Height="250" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Border BorderBrush="#FFDDDBDB" Background="#FFFCD1D1" BorderThickness="1" Margin="20 45 20 45"/>
        <StackPanel Margin="25 50 25 50">
            <Label Content="Repoting Buyer" HorizontalAlignment="Center" FontSize="20" Margin="0 5 0 5"/>
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Fill in The Report Reason" HorizontalAlignment="Center"/>
                <TextBox Name="lapor" BorderBrush="LightGray" Background="WhiteSmoke"/>
                <Button Name="submit" Content="Submit" Click="Submit_Click" Margin="0 10 0 0" HorizontalAlignment="Center" Height="30" Width="80" Background="#FFFF7777" BorderBrush="#FFF1CECE"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
