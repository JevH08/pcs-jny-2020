<Window x:Class="Yinyinpedia.DeliveryServices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yinyinpedia"
        mc:Ignorable="d"
        Title="DeliveryServices" Height="470" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Border BorderThickness="1" Margin="20 30 20 20" BorderBrush="Black"/>
        <StackPanel Margin="25 50 25 25">
            <Label Content="Delivery Services" HorizontalAlignment="Center" FontSize="20" Margin="0 0 0 10"/>
            <Button Name="back" Content="Back" Click="Back_Click" HorizontalAlignment="Right" Height="30" Width="80" Margin="0 0 10 10"/>
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="10 0 0 0">
                    <DataGrid Name="dgvDelivery" Width="408" Height="260" MouseDoubleClick="DgvDelivery_MouseDoubleClick"/>
                </StackPanel>
                <StackPanel Margin="10 0 0 0">
                    <Label Content="Name"/>
                    <Label Content="Price / KG"/>
                    <Label Content="Minimum"/>
                    <Label Content="Discount"/>
                </StackPanel>
                <StackPanel Margin="10 7 0 0">
                    <TextBox Name="name" Width="200"/>
                    <TextBox Name="price" Width="200" Margin="0 7 0 0"/>
                    <TextBox Name="minimum" Width="200" Margin="0 7 0 0"/>
                    <TextBox Name="discount" Width="200" Margin="0 7 0 0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                        <Button Name="submit" Content="Create" Click="Submit_Click" Height="30" Width="80"/>
                        <Button Name="delete" Content="Delete" Margin="20 0 0 0" Click="Delete_Click" Height="30" Width="80"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
                <TextBlock Text="Delivery Services : "/>
                <TextBlock Name="delivery" Text="0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
